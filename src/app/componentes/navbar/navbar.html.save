<nav class="sticky top-0 z-50 bg-white border-b border-gray-200 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- LOGO -->
      <div class="flex items-center gap-2">
        <i class="fas fa-paper-plane text-orange-500 text-2xl"></i>
        <span style="font-size: 1.5rem; font-weight: 900; background: linear-gradient(to right, #f97316, #2dd4bf); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
          TrinoFlow
        </span>
      </div>

      <!-- MENU DESKTOP -->
      <div class="hidden md:flex items-center gap-8">
        <a routerLink="/principal" class="flex items-center gap-2 text-gray-600 hover:text-orange-500 font-semibold transition">
          <i class="fas fa-home"></i> Inicio
        </a>
        <a routerLink="/explorar" class="flex items-center gap-2 text-gray-600 hover:text-orange-500 font-semibold transition">
          <i class="fas fa-compass"></i> Explorar
        </a>

        <!-- NOTIFICACIONES DESKTOP -->
        <div class="relative">
          <button (click)="toggleNotifications($event)" class="notification-toggle flex items-center gap-2 text-gray-600 hover:text-orange-500 font-semibold transition relative">
            <i class="fas fa-bell text-lg"></i>
            <span *ngIf="notificationsCount > 0" class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center font-bold shadow-lg animate-pulse">{{ notificationsCount }}</span>
          </button>

          <!-- Dropdown Notificaciones DESKTOP -->
          <div *ngIf="showNotifications" class="notification-panel absolute right-0 mt-2 w-80 bg-white border border-gray-200 rounded-xl shadow-2xl overflow-hidden z-50">
            <div style="background: linear-gradient(to right, #f97316, #2dd4bf); padding: 1rem 1.5rem;">
              <div class="flex items-center justify-between">
                <h3 class="text-white font-bold text-lg">Notificaciones</h3>
                <button *ngIf="notificationsCount > 0" (click)="markAllAsRead()" class="text-white text-xs hover:underline">
                  Marcar todas como leídas
                </button>
              </div>
            </div>
            <div class="max-h-96 overflow-y-auto">
              <div *ngIf="notifications.length === 0" class="px-4 py-8 text-center text-gray-500">
                <i class="fas fa-bell-slash text-4xl mb-2 text-gray-300"></i>
                <p class="text-sm">No tienes notificaciones</p>
              </div>
              
              <a *ngFor="let notification of notifications" 
                 href="#" 
                 (click)="markAsRead(notification.id); $event.preventDefault()"
                 class="flex items-start gap-3 px-4 py-3 hover:bg-gradient-to-r hover:from-orange-50 hover:to-teal-50 transition-all duration-300 border-b border-gray-100 group relative">
                <div [style.background]="notification.avatarColor" 
                     style="width: 2.5rem; height: 2.5rem; border-radius: 9999px; display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; font-size: 0.875rem; flex-shrink: 0; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                  {{ notification.initials }}
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm text-gray-900">
                    <span class="font-semibold text-orange-600">{{ notification.user }}</span> 
                    {{ notification.action }}
                  </p>
                  <p class="text-xs text-gray-500 mt-1">{{ notification.time }}</p>
                </div>
                <div *ngIf="notification.isUnread" class="w-2 h-2 bg-orange-500 rounded-full flex-shrink-0 mt-2 shadow-sm"></div>
                <button (click)="deleteNotification(notification.id); $event.stopPropagation(); $event.preventDefault()" 
                        class="opacity-0 group-hover:opacity-100 absolute top-2 right-2 text-gray-400 hover:text-red-500 transition-opacity">
                  <i class="fas fa-times text-sm"></i>
                </button>
              </a>
            </div>
          </div>
        </div>

        <!-- PERFIL -->
        <div class="relative">
          <button (click)="toggleProfileMenu($event)" class="profile-toggle flex items-center gap-2 text-gray-600 hover:text-orange-500 font-semibold transition-all duration-200 group cursor-pointer">
            <img [src]="user.avatar" alt="avatar" class="w-8 h-8 rounded-full border-2 border-gray-300 group-hover:border-orange-500 transition-all shadow-sm">
            <span>{{ user.name }}</span>
            <i class="fas fa-chevron-down text-xs group-hover:rotate-180 transition-transform duration-200"></i>
          </button>

          <!-- Dropdown perfil -->
          <div *ngIf="showProfileMenu" class="profile-dropdown absolute right-0 mt-2 w-64 bg-white border border-gray-200 rounded-xl shadow-2xl overflow-hidden">
            <div class="px-4 py-3 bg-gradient-to-r from-orange-50 to-teal-50 border-b border-gray-200">
              <p class="font-bold text-gray-800 text-base">{{ user.name }}</p>
              <p class="text-sm text-gray-600">{{ user.username }}</p>
            </div>

            <div class="py-2">
              <a routerLink="/perfil" class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gradient-to-r hover:from-orange-50 hover:to-teal-50 transition-all duration-200 group cursor-pointer">
                <i class="fas fa-user text-orange-500 w-5 group-hover:scale-125 transition-transform"></i>
                <span class="font-medium">Mi Perfil</span>
              </a>

              <a routerLink="/login" class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gradient-to-r hover:from-orange-50 hover:to-teal-50 transition-all duration-200 group cursor-pointer">
                <i class="fas fa-sign-in-alt text-orange-500 w-5 group-hover:scale-125 transition-transform"></i>
                <span class="font-medium">Iniciar sesión</span>
              </a>

              <a routerLink="/registro" class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gradient-to-r hover:from-orange-50 hover:to-teal-50 transition-all duration-200 group cursor-pointer">
                <i class="fas fa-user-plus text-teal-500 w-5 group-hover:scale-125 transition-transform"></i>
                <span class="font-medium">Registrarse</span>
              </a>
            </div>

            <hr class="border-gray-200">

            <div class="py-2">
              <button (click)="logout()" class="w-full flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50 transition-all duration-200 group cursor-pointer">
                <i class="fas fa-sign-out-alt w-5 group-hover:scale-125 transition-transform"></i>
                <span class="font-semibold">Cerrar sesión</span>
              </button>
            </div>
          </div>
        </div>

        <!-- BOTÓN PUBLICAR -->
        <button (click)="onOpenCreate()" style="background: linear-gradient(to right, #f97316, #ea580c); color: white; padding: 0.625rem 1.25rem; border-radius: 0.75rem; font-weight: bold; display: flex; align-items: center; gap: 0.5rem; border: none; cursor: pointer; transition: all 0.2s;">
          <i class="fas fa-plus-circle"></i> Publicar
        </button>
      </div>

      <!-- ICONOS MÓVIL (Notificaciones + Menu) -->
      <div class="md:hidden flex items-center gap-3">
        <!-- Botón Notificaciones Móvil -->
        <button (click)="toggleNotifications($event)" class="notification-toggle relative text-gray-600 hover:text-orange-500 p-2 transition-all">
          <i class="fas fa-bell text-xl"></i>
          <span *ngIf="notificationsCount > 0" class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center font-bold shadow-lg animate-pulse">{{ notificationsCount }}</span>
        </button>

        <!-- Botón Menu Móvil -->
        <button (click)="toggleMobileMenu()" class="text-gray-600 hover:text-orange-500 p-2 transition-all">
          <i [ngClass]="showMobileMenu ? 'fas fa-times text-2xl' : 'fas fa-bars text-2xl'"></i>
        </button>
      </div>
    </div>
  </div>

  <!-- PANEL DE NOTIFICACIONES MÓVIL (Fullscreen) -->
  <div *ngIf="showNotifications" class="md:hidden fixed inset-0 bg-white z-50 overflow-y-auto">
    <div class="sticky top-0 z-10" style="background: linear-gradient(to right, #f97316, #2dd4bf); padding: 1rem 1.5rem;">
      <div class="flex items-center justify-between">
        <h3 class="text-white font-bold text-xl">Notificaciones</h3>
        <button (click)="toggleNotifications($event)" class="text-white p-2">
          <i class="fas fa-times text-2xl"></i>
        </button>
      </div>
      <button *ngIf="notificationsCount > 0" (click)="markAllAsRead()" class="text-white text-sm hover:underline mt-2">
        Marcar todas como leídas
      </button>
    </div>

    <div class="pb-4">
      <div *ngIf="notifications.length === 0" class="px-4 py-20 text-center text-gray-500">
        <i class="fas fa-bell-slash text-6xl mb-4 text-gray-300"></i>
        <p class="text-lg">No tienes notificaciones</p>
      </div>

      <a *ngFor="let notification of notifications" 
         href="#" 
         (click)="markAsRead(notification.id); $event.preventDefault()"
         class="flex items-start gap-4 px-6 py-4 hover:bg-gradient-to-r hover:from-orange-50 hover:to-teal-50 transition-all duration-300 border-b border-gray-100 active:bg-gray-100 relative">
        <div [style.background]="notification.avatarColor" 
             style="width: 3rem; height: 3rem; border-radius: 9999px; display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 1rem; flex-shrink: 0; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
          {{ notification.initials }}
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-base text-gray-900">
            <span class="font-semibold text-orange-600">{{ notification.user }}</span> 
            {{ notification.action }}
          </p>
          <p class="text-sm text-gray-500 mt-1">{{ notification.time }}</p>
        </div>
        <div class="flex flex-col items-end gap-2">
          <div *ngIf="notification.isUnread" class="w-3 h-3 bg-orange-500 rounded-full shadow-sm"></div>
          <button (click)="deleteNotification(notification.id); $event.stopPropagation(); $event.preventDefault()" 
                  class="text-gray-400 hover:text-red-500 p-2">
            <i class="fas fa-trash text-sm"></i>
          </button>
        </div>
      </a>
    </div>
  </div>

  <!-- MENU MÓVIL -->
  <div *ngIf="showMobileMenu" class="md:hidden border-t border-gray-200 bg-white">
    <div class="px-4 py-2 space-y-2">
      <a routerLink="/principal" (click)="toggleMobileMenu()" class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gradient-to-r hover:from-orange-50 hover:to-teal-50 rounded-lg transition-all duration-200 font-semibold">
        <i class="fas fa-home text-orange-500 w-5"></i> Inicio
      </a>

      <a routerLink="/explorar" (click)="toggleMobileMenu()" class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gradient-to-r hover:from-orange-50 hover:to-teal-50 rounded-lg transition-all duration-200 font-semibold">
        <i class="fas fa-compass text-orange-500 w-5"></i> Explorar
      </a>

      <button (click)="toggleProfileMenu($event)" class="flex items-center gap-3 w-full px-4 py-3 text-gray-700 hover:bg-gradient-to-r hover:from-orange-50 hover:to-teal-50 rounded-lg transition-all duration-200 font-semibold cursor-pointer">
        <img [src]="user.avatar" alt="avatar" class="w-7 h-7 rounded-full border-2 border-gray-300">
        {{ user.name }}
      </button>

      <!-- Dropdown Perfil en Móvil -->
      <div *ngIf="showProfileMenu" class="ml-6 space-y-2 bg-gray-50 rounded-lg p-3">
        <a routerLink="/perfil" (click)="toggleMobileMenu()" class="flex items-center gap-2 px-3 py-2 text-gray-600 hover:text-orange-500 font-medium rounded-lg hover:bg-white transition-all duration-200 cursor-pointer">
          <i class="fas fa-user w-4"></i> Mi Perfil
        </a>
        <a routerLink="/login" (click)="toggleMobileMenu()" class="flex items-center gap-2 px-3 py-2 text-gray-600 hover:text-orange-500 font-medium rounded-lg hover:bg-white transition-all duration-200 cursor-pointer">
          <i class="fas fa-sign-in-alt w-4"></i> Iniciar sesión
        </a>
        <a routerLink="/registro" (click)="toggleMobileMenu()" class="flex items-center gap-2 px-3 py-2 text-gray-600 hover:text-teal-500 font-medium rounded-lg hover:bg-white transition-all duration-200 cursor-pointer">
          <i class="fas fa-user-plus w-4"></i> Registrarse
        </a>
        <button (click)="logout()" class="flex items-center gap-2 px-3 py-2 text-red-600 font-medium hover:bg-red-50 rounded-lg transition-all duration-200 w-full text-left cursor-pointer">
          <i class="fas fa-sign-out-alt w-4"></i> Cerrar sesión
        </button>
      </div>

      <button (click)="onOpenCreate()" style="width: 100%; background: linear-gradient(to right, #f97316, #ea580c); color: white; padding: 0.75rem 1.25rem; border-radius: 0.75rem; font-weight: bold; border: none; cursor: pointer; transition: all 0.2s;">
        <i class="fas fa-plus-circle mr-2"></i> Publicar
      </button>
    </div>
  </div>

  <!-- MODAL CREAR POST -->
  <app-boton-crear-post *ngIf="showCrearPost" (close)="showCrearPost = false"></app-boton-crear-post>
</nav>
